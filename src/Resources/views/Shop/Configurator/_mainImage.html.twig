{% if productConfigurator.imagesByType('thumbnail') is not empty %}
    {% set path = productConfigurator.imagesByType('thumbnail').first.path|imagine_filter(filter|default('sylius_shop_product_thumbnail')) %}
{% elseif productConfigurator.images.first %}
    {% set path = productConfigurator.images.first.path|imagine_filter(filter|default('sylius_shop_product_thumbnail')) %}
{% else %}
    {% set path = asset('assets/shop/img/200x200.png') %}
{% endif %}

<img src="{{ path }}" {{ sylius_test_html_attribute('main-image') }} alt="{{ productConfigurator.name }}" class="ui bordered image" />
